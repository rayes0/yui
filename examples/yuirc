# .yuirc
# vim: ft=sh

# Settings block, with the default options..
set STARTBLOCK

hist_ign_space=true
hist_ign_dups=false
hist_max_size=1000
completion_type=list
completion_limit=50
hinting_color=BrightBlack
keyseq_timeout=10
edit_mode=Emacs
auto_add_history=true
bell_style=None
color_mode=Enabled
tab_stop=4
check_cur_pos=false
indent_size=2
bracketed_paste=true

set ENDBLOCK

# Specify some aliases..
alias STARTBLOCK

ls='ls --color=auto'
ll='ls -al'
grep='grep --color=auto'

alias ENDBLOCK

# Export some env vars..
# export VAR=VALUE

# This file is just a yui script. You can run external commands as well.
echo hello from yuirc!
